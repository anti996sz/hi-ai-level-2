.shape-item-active {
  z-index: 1;
}
.shape-item-active .shape-area {
  box-shadow: inset 0 0 0 2rpx #ed4ba6;
}
.shape-item-active .face-line {
  /* border-color: #ed4ba6; */
  box-shadow:0px 0px 0px 1px rgba(237,75,166,1);
}
.shape-desc {
  position: absolute;
  font-size: 28rpx;
  top: -1%;
  width: 210rpx;
  background-color: #61e6bd;
  padding: 28rpx 20rpx;
  white-space: nowrap;
}
.shape-desc.in-right {
  left: 103%;
}
.shape-desc.in-left {
  right: 103%;
}
.image-tips {
  margin-top: 17px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:21px;
  text-align: center;
}
.cut-wrap {
  white-space: nowrap;
  margin-top: 17px;
}
.cut-item {
  margin-top: 20rpx;
  width: 120rpx;
  height: 120rpx;
  box-shadow: 0 0 0 2rpx #4ec9b0;
  margin-right: 18rpx;
  margin-left: 2rpx;
  background: #fff;
}
.cut-item-active {
  box-shadow: 0 0 0 2rpx #ed4ba6;
}
.main-button {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background:rgba(49,114,238,1);
  font-size: 36rpx;
  line-height: 120rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  letter-spacing: 6rpx;
}
.main-button:before {
  content: '';
  display: inline-block;
  width: 54rpx;
  height: 54rpx;
  background: url("https://n1image.hjfile.cn/res7/2020/04/12/f6857ca8693d20c87465a0ea1cf236b6.png") no-repeat;
  background-size: contain;
  vertical-align: middle;
  margin: -6rpx 16rpx 0 0;
}

