.page {
  height: 100vh;
  padding-top: 37px;
  box-sizing: border-box;
  background:linear-gradient(180deg,rgba(31,41,56,0.45) 0%,rgba(28,37,50,0.7) 77%,rgba(28,37,50,1) 100%);
  background-repeat: no-repeat;
}

.image-wrap {
  margin: 20rpx auto;
  width: 600rpx;
}
.to-choose {
  border: 2rpx dashed #efefef;
  width: 596rpx;
  height: 596rpx;
  margin: 0 auto;
  background: url("https://n1image.hjfile.cn/res7/2020/02/13/4b391f3e41cef2d8f387822443eb533b.png") no-repeat center/auto 300rpx;
}
.image-selected {
  width: 600rpx;
  height: 600rpx;
}
.shape-wrap {
  position: relative;
}
.shape-item {
  position: absolute;
}
.shape-area {
  height: 100%;
  /* box-shadow: inset 0 0 0 2rpx #4ec9b0; */
  box-shadow:0px 0px 0px 1px rgba(78,201,176,1);
}
